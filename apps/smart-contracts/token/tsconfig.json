{
    "extends": "tsconfig/server.json",
    "exclude": ["node_modules", ".next", ".turbo"],
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["ES2019"],
        "module": "CommonJS",
        "allowJs": false,
        "strict": false,
        "esModuleInterop": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "declaration": true
    },
    "include": ["./types/**/*.ts", "./tasks/**/*.ts", "./test/**/*.ts", "./test-utils/**/*.ts", "./*.js", "index.ts"],
    "files": [
        "./index.ts",
        "./hardhat.config.ts",
    ]
}