{
    "name": "token",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "clean": "rm -rf './frontend/src/hardhat' && npx hardhat clean",
        "sl": "yarn prettier --write 'contracts/**/*.sol'",
        "sh": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
        "size": "npx hardhat size-contracts",
        "prec": "yarn typechain && yarn clean && yarn sl",
        "c": "yarn compile",
        "compile": "yarn typechain && npx hardhat compile",
        "l": "yarn prettier --write './test/**/*.ts' './hardhat.config.ts' './types/*.ts'",
        "pret": "yarn c && yarn l",
        "t": "npx hardhat test",
        "test:ci": "yarn c && npx hardhat test",
        "typechain": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat typechain", 
        "pret:coverage": "yarn c && yarn l",
        "t:coverage": "npx hardhat coverage",
        "lint": "eslint . --max-warnings 0 --ext ts,tsx",
        "server": "npx hardhat node --watch",
        "deploy": "npx hardhat --network hardhat deploy",
        "deploy:local": "npx hardhat --network localhost deploy",
        "deploy:ropsten": "npx hardhat --network ropsten deploy"
    },
    "devDependencies": {
        "@codechecks/client": "0.1.12",
        "@types/chai": "4.2.22",
        "@types/mocha": "9.0.0",
        "@types/node": "16.11.10",
        "config": "*",
        "ethereumjs-util": "7.0.9",
        "prettier-plugin-solidity": "1.0.0-beta.19",
        "solhint": "3.3.3",
        "solhint-plugin-prettier": "0.0.5",
        "ts-generator": "0.1.1",
        "ts-morph": "9.1.0",
        "ts-node": "9.1.1",
        "tsconfig": "*",
        "typechain": "8.0.0",
        "typescript": "4.5.2",
        "web3-utils": "1.6.1"
    },
    "dependencies": {
        "@defi-wonderland/smock": "2.0.7",
        "@ethersproject/abi": "5.5.0",
        "@ethersproject/bytes": "5.5.0",
        "@ethersproject/hardware-wallets": "5.5.0",
        "@ethersproject/providers": "5.5.0",
        "@nomicfoundation/hardhat-chai-matchers": "1.0.0-beta.0",
        "@nomiclabs/hardhat-etherscan": "2.1.8",
        "@openzeppelin/contracts": "4.4.0",
        "@openzeppelin/contracts-upgradeable": "4.4.0",
        "@openzeppelin/hardhat-upgrades": "1.17.0",
        "@typechain/ethers-v5": "10.0.0",
        "@typechain/hardhat": "6.0.0",
        "chai": "4.3.4",
        "defender-relay-client": "1.19.0",
        "dotenv": "10.0.0",
        "ethereum-waffle": "3.4.0",
        "keccak256": "1.0.3",
        "merkletreejs": "0.2.24",
        "solidity-coverage": "0.7.17"
    }
}
