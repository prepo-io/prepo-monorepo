{
    "name": "acquisition-royale",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "clean": "rm -rf './frontend/src/hardhat' && npx hardhat clean",
        "sl": "yarn prettier --write 'contracts/**/*.sol'",
        "sh": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
        "size": "npx hardhat size-contracts",
        "prec": "yarn clean && yarn sl",
        "c": "npx hardhat compile",
        "l": "yarn prettier --write './deploy/*.ts' './test/**/*.ts' './hardhat.config.ts'",
        "pret": "yarn c && yarn l",
        "t": "npx hardhat test",
        "server": "npx hardhat node --watch",
        "deploy": "npx hardhat --network hardhat deploy",
        "deploy:local": "npx hardhat --network localhost deploy",
        "deploy:ropsten": "npx hardhat --network ropsten deploy",
        "deploy:goerli": "npx hardhat --network goerli deploy",
        "upgrade-acqr": "npx hardhat deploy --network matic --tags 'upgrade-acqr'"
    },
    "devDependencies": {
        "@codechecks/client": "0.1.10",
        "@defi-wonderland/smock": "2.0.7",
        "@types/chai": "4.2.15",
        "@types/mocha": "8.2.1",
        "@types/node": "14.14.31",
        "ethereumjs-util": "7.0.9",
        "prettier-plugin-solidity": "1.0.0-beta.5",
        "solhint": "3.3.3",
        "solhint-plugin-prettier": "0.0.5",
        "ts-generator": "0.1.1",
        "ts-morph": "9.1.0",
        "ts-node": "9.1.1",
        "typechain": "6.1.0",
        "typescript": "4.2.3",
        "web3-utils": "1.3.4"
    },
    "dependencies": {
        "@nomiclabs/hardhat-ethers": "2.0.1",
        "@nomiclabs/hardhat-etherscan": "2.1.1",
        "@nomiclabs/hardhat-waffle": "2.0.1",
        "@openzeppelin/contracts": "4.3.0",
        "@openzeppelin/contracts-upgradeable": "4.3.0",
        "@openzeppelin/hardhat-upgrades": "1.17.0",
        "@openzeppelin/upgrades-core": "1.14.2",
        "@typechain/ethers-v5": "8.0.5",
        "@typechain/hardhat": "3.1.0",
        "chai": "4.3.3",
        "dotenv": "8.2.0",
        "ethers": "5.4.7",
        "ethereum-waffle": "3.3.0",
        "hardhat": "2.8.2",
        "hardhat-contract-sizer": "2.0.3",
        "hardhat-deploy": "0.7.0-beta.46",
        "hardhat-deploy-ethers": "0.3.0-beta.7",
        "hardhat-gas-reporter": "1.0.4",
        "keccak256": "1.0.3",
        "merkletreejs": "0.2.24",
        "prb-math": "2.4.0"
    }
}
