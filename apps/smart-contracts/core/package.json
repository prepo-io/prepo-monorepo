{
    "name": "core",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "clean": "rm -rf './frontend/src/hardhat' && npx hardhat clean",
        "sl": "yarn prettier --write 'contracts/**/*.sol'",
        "sh": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
        "size": "npx hardhat size-contracts",
        "prec": "yarn clean && yarn sl",
        "c": "npx hardhat compile",
        "l": "yarn prettier --write './deploy/*.ts' './test/**/*.ts' './hardhat.config.ts'",
        "pret": "yarn c && yarn l",
        "t": "npx hardhat test",
        "test": "npx hardhat compile && npx hardhat test",
        "pret:coverage": "yarn c && yarn l",
        "t:coverage": "npx hardhat coverage",
        "lint": "eslint . --max-warnings 0 --ext ts,tsx",
        "server": "npx hardhat node --watch",
        "deploy": "npx hardhat --network hardhat deploy",
        "deploy:local": "npx hardhat --network localhost deploy",
        "deploy:ropsten": "npx hardhat --network ropsten deploy"
    },
    "devDependencies": {
        "@codechecks/client": "0.1.10",
        "@types/chai": "4.2.15",
        "@types/mocha": "8.2.1",
        "@types/node": "14.14.31",
        "config": "*",
        "ethereumjs-util": "7.0.9",
        "prettier-plugin-solidity": "1.0.0-beta.19",
        "solhint": "3.3.3",
        "solhint-plugin-prettier": "0.0.5",
        "ts-generator": "0.1.1",
        "ts-morph": "9.1.0",
        "ts-node": "9.1.1",
        "tsconfig": "*",
        "typechain": "6.0.3",
        "typescript": "4.2.3",
        "web3-utils": "1.3.4"
    },
    "dependencies": {
        "dotenv": "8.2.0",
        "@defi-wonderland/smock": "2.0.7",
        "@typechain/ethers-v5": "8.0.3",
        "@typechain/hardhat": "3.0.0",
        "@nomiclabs/hardhat-etherscan": "2.1.1",
        "@nomiclabs/hardhat-waffle": "2.0.1",
        "@nomiclabs/hardhat-ethers": "yarn:hardhat-deploy-ethers@0.3.0-beta.13",
        "@openzeppelin/contracts": "4.4.0",
        "@openzeppelin/contracts-upgradeable": "4.4.0",
        "@openzeppelin/hardhat-upgrades": "1.9.0",
        "@ethersproject/bignumber": "5.6.0",
        "@ethersproject/units": "5.6.0",
        "ethers": "5.4.7",
        "envfile": "6.17.0",
        "chai": "4.3.3",
        "keccak256": "1.0.3",
        "merkletreejs": "0.2.24",
        "hardhat": "2.6.4",
        "hardhat-deploy": "0.9.24",
        "hardhat-contract-sizer": "2.0.3",
        "hardhat-gas-reporter": "1.0.4",
        "ethereum-waffle": "3.4.0",
        "solidity-coverage": "0.7.17"
    }
}
