{
    "name": "core",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "clean": "rm -rf './frontend/src/hardhat' && npx hardhat clean",
        "sl": "yarn prettier --write 'contracts/**/*.sol'",
        "sh": "npx solhint -f table contracts/**/*.sol",
        "size": "npx hardhat size-contracts",
        "prec": "yarn typechain && yarn clean && yarn sl",
        "c": "yarn compile",
        "compile": "yarn typechain && npx hardhat compile",
        "l": "yarn prettier --write './deploy/*.ts' './test/**/*.ts' './hardhat.config.ts' './harnesses/*.ts' './helpers/*.ts' './utils/*.ts' './tasks/*.ts'",
        "pret": "yarn c && yarn l",
        "t": "npx hardhat test",
        "test:ci": "yarn c && yarn t",
        "typechain": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat typechain",
        "pret:coverage": "yarn c && yarn l",
        "t:coverage": "npx hardhat coverage",
        "lint": "eslint . --max-warnings 0 --ext ts,tsx",
        "server": "npx hardhat node --watch",
        "deploy": "npx hardhat --network hardhat deploy",
        "deploy:local": "npx hardhat --network localhost deploy",
        "deploy:ropsten": "npx hardhat --network ropsten deploy"
    },
    "devDependencies": {
        "@codechecks/client": "0.1.10",
        "@types/chai": "4.2.15",
        "@types/mocha": "8.2.1",
        "@types/node": "14.14.31",
        "config": "*",
        "ethereumjs-util": "7.0.9",
        "prettier-plugin-solidity": "1.0.0-beta.19",
        "ts-generator": "0.1.1",
        "ts-morph": "9.1.0",
        "ts-node": "9.1.1",
        "tsconfig": "*",
        "typechain": "6.0.3",
        "typescript": "4.2.3",
        "web3-utils": "1.3.4",
        "solhint-config-prepo": "*"
    },
    "dependencies": {
        "@defi-wonderland/smock": "2.0.7",
        "@ethersproject/bignumber": "5.6.0",
        "@ethersproject/units": "5.6.0",
        "@nomiclabs/hardhat-waffle": "2.0.1",
        "@openzeppelin/contracts": "4.4.0",
        "@openzeppelin/contracts-upgradeable": "4.4.0",
        "@typechain/ethers-v5": "8.0.3",
        "@typechain/hardhat": "3.0.0",
        "chai": "4.3.3",
        "dotenv": "8.2.0",
        "envfile": "6.17.0",
        "ethereum-waffle": "3.4.0",
        "keccak256": "1.0.3",
        "merkletreejs": "0.2.24",
        "solidity-coverage": "0.7.17",
        "prepo-constants": "*",
        "prepo-hardhat": "*",
        "prepo-shared-contracts": "*"
    }
}
