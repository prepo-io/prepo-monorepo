{
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "prepo-react-boilerplate#build": {
      "dependsOn": [
        "^build",
        "$SENTRY_ORG",
        "$SENTRY_PROJECT",
        "$NEXT_PUBLIC_SENTRY_DSN",
        "$SENTRY_AUTH_TOKEN",
        "$NPM_RC"
      ],
      "outputs": [".next/**"]
    },
    "prepo-docs#build": {
      "dependsOn": ["^build", "$NPM_RC"],
      "outputs": ["build/**"]
    },
    "prepo-website#build": {
      "dependsOn": ["^build", "$NEXT_PUBLIC_RECAPTCHA_SITE_ID", "$NPM_RC"],
      "outputs": [".next/**", "out/**"]
    },
    "prepo-simulator#build": {
      "dependsOn": ["^build", "$NPM_RC"],
      "outputs": ["dist/**"]
    },
    "test": {},
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "compile": {
      "cache": false
    }
  }
}
